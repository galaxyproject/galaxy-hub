---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  date?: Date | string;
  authors?: string[];
  tags?: string[];
  toc?: boolean;
  image?: string;
}

const {
  title,
  description,
  date,
  authors: authorsRaw = [],
  tags: tagsRaw = [],
  toc = false,
  image,
} = Astro.props;

// Ensure arrays are never null
const authors = authorsRaw || [];
const tags = tagsRaw || [];

// Helper to ensure date is a Date object
function toDate(d: Date | string | undefined): Date | null {
  if (!d) return null;
  return d instanceof Date ? d : new Date(d);
}

// Format date for display
function formatDate(d: Date | string | undefined): string {
  const date = toDate(d);
  if (!date) return '';
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function toISOString(d: Date | string | undefined): string {
  const date = toDate(d);
  return date ? date.toISOString() : '';
}
---

<BaseLayout title={title} description={description}>
  <article class="max-w-5xl mx-auto">
    <!-- Article Header -->
    <header class="mb-8 pb-8 border-b border-gray-200">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">{title}</h1>

      {description && (
        <p class="text-xl text-gray-600 mb-4">{description}</p>
      )}

      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
        {date && (
          <time datetime={toISOString(date)}>
            {formatDate(date)}
          </time>
        )}

        {authors.length > 0 && (
          <div class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{authors.join(', ')}</span>
          </div>
        )}
      </div>

      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map((tag) => (
            <a
              href={`/tags/${tag.toLowerCase()}/`}
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-galaxy-primary/10 text-galaxy-primary hover:bg-galaxy-primary/20 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    {image && (
      <figure class="mb-8 -mx-4 sm:mx-0">
        <img
          src={image}
          alt={title}
          class="w-full rounded-lg shadow-lg"
        />
      </figure>
    )}

    <!-- Article Content -->
    <div class="prose prose-lg prose-galaxy max-w-none">
      <slot />
    </div>

    <!-- Article Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      {tags.length > 0 && (
        <div class="mb-6">
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`/tags/${tag.toLowerCase()}/`}
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}

      <div class="flex justify-between items-center">
        <a href="/news/" class="text-galaxy-primary hover:underline flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to News
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  /* Custom prose styles for Galaxy branding */
  .prose-galaxy {
    --tw-prose-links: #25537B;
    --tw-prose-headings: #1f2937;
  }

  .prose-galaxy :where(a):not(:where([class~="not-prose"] *)) {
    color: var(--tw-prose-links);
    text-decoration: none;
  }

  .prose-galaxy :where(a):not(:where([class~="not-prose"] *)):hover {
    text-decoration: underline;
  }

  .prose-galaxy :where(code):not(:where([class~="not-prose"] *)) {
    background-color: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose-galaxy :where(pre):not(:where([class~="not-prose"] *)) {
    background-color: #1f2937;
    border-radius: 0.5rem;
  }
</style>
