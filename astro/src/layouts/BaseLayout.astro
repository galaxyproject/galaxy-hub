---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import Sidebar from '../components/layout/Sidebar.astro';
import MobileMenu from '../components/layout/MobileMenu.vue';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Galaxy Community Hub' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | Galaxy Hub</title>

    <!-- Open Graph / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <div class="flex min-h-screen overflow-hidden">
      <!-- Sidebar (desktop only) -->
      <Sidebar transition:persist />

      <!-- Mobile header with Vue-powered menu -->
      <div class="lg:hidden fixed top-0 left-0 right-0 z-50 bg-galaxy-dark p-4 flex items-center justify-between">
        <a href="/" class="block">
          <img src="/images/galaxy_logo_hub_white.svg" alt="Galaxy Community Hub" class="h-8 w-auto" />
        </a>
        <MobileMenu client:load />
      </div>

      <!-- Main content area -->
      <main class="flex-1 flex flex-col min-h-screen lg:ml-64 pt-16 lg:pt-0 min-w-0 overflow-x-hidden">
        <div class="flex-1 p-4 sm:p-6 lg:p-8 bg-light-bg bg-grid">
          <slot />
        </div>

        <!-- Footer -->
        <footer class="bg-galaxy-dark text-white py-8 px-4 sm:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-galaxy-gold mb-4">Galaxy Project</h3>
              <p class="text-sm text-gray-300">
                Open source platform for accessible, reproducible, and transparent data analysis.
              </p>
            </div>
            <div>
              <h4 class="font-semibold mb-3">Resources</h4>
              <ul class="space-y-2 text-sm text-gray-300">
                <li><a href="/use/" class="hover:text-galaxy-gold">Use Galaxy</a></li>
                <li><a href="https://training.galaxyproject.org" class="hover:text-galaxy-gold">Training</a></li>
                <li><a href="https://docs.galaxyproject.org" class="hover:text-galaxy-gold">Documentation</a></li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold mb-3">Community</h4>
              <ul class="space-y-2 text-sm text-gray-300">
                <li><a href="/news/" class="hover:text-galaxy-gold">News</a></li>
                <li><a href="/events/" class="hover:text-galaxy-gold">Events</a></li>
                <li><a href="/community/" class="hover:text-galaxy-gold">Get Involved</a></li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold mb-3">Connect</h4>
              <div class="flex gap-3">
                <a
                  href="https://github.com/galaxyproject"
                  class="text-gray-300 hover:text-galaxy-gold"
                  aria-label="GitHub"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                    ><path
                      d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    ></path></svg
                  >
                </a>
                <a
                  href="https://mastodon.social/@galaxyproject"
                  class="text-gray-300 hover:text-galaxy-gold"
                  aria-label="Mastodon"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                    ><path
                      d="M23.268 5.313c-.35-2.578-2.617-4.61-5.304-5.004C17.51.242 15.792 0 11.813 0h-.03c-3.98 0-4.835.242-5.288.309C3.882.692 1.496 2.518.917 5.127.64 6.412.61 7.837.661 9.143c.074 1.874.088 3.745.26 5.611.118 1.24.325 2.47.62 3.68.55 2.237 2.777 4.098 4.96 4.857 2.336.792 4.849.923 7.256.38.265-.061.527-.132.786-.213.585-.184 1.27-.39 1.774-.753a.057.057 0 00.023-.043v-1.809a.052.052 0 00-.02-.041.053.053 0 00-.046-.01 20.282 20.282 0 01-4.709.545c-2.73 0-3.463-1.284-3.674-1.818a5.593 5.593 0 01-.319-1.433.053.053 0 01.066-.054c1.517.363 3.072.546 4.632.546.376 0 .75 0 1.125-.01 1.57-.044 3.224-.124 4.768-.422.038-.008.077-.015.11-.024 2.435-.464 4.753-1.92 4.989-5.604.008-.145.03-1.52.03-1.67.002-.512.167-3.63-.024-5.545zm-3.748 9.195h-2.561V8.29c0-1.309-.55-1.976-1.67-1.976-1.23 0-1.846.79-1.846 2.35v3.403h-2.546V8.663c0-1.56-.617-2.35-1.848-2.35-1.112 0-1.668.668-1.668 1.977v6.218H4.822V8.102c0-1.31.337-2.35 1.011-3.12.696-.77 1.608-1.164 2.74-1.164 1.311 0 2.302.5 2.962 1.498l.638 1.06.638-1.06c.66-.999 1.65-1.498 2.96-1.498 1.13 0 2.043.395 2.74 1.164.675.77 1.012 1.81 1.012 3.12z"
                    ></path></svg
                  >
                </a>
              </div>
            </div>
          </div>
          <div class="max-w-7xl mx-auto mt-8 pt-6 border-t border-gray-700 text-center text-sm text-gray-400">
            <p>&copy; {new Date().getFullYear()} Galaxy Project. All rights reserved.</p>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
