---
import Footer from '../components/Footer.vue';
import Navbar from '../components/Navbar.vue';
import { subsites, getSubsiteConfig } from '../config/subsites.js';

export interface Props {
  title: string;
  description?: string;
  bare?: boolean;
  subsite?: string;
  navbarConfig?: any;
}

const { 
  title, 
  description = 'All about Galaxy and its community.', 
  bare = false,
  subsite = subsites.default,
  navbarConfig
} = Astro.props;

const subsiteConfig = getSubsiteConfig(subsite);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Galaxy Community Hub</title>
  </head>
  <body>
    {!bare && (
      <Navbar 
        client:load 
        subsite={subsite}
        subsiteConfig={subsiteConfig}
        customConfig={navbarConfig}
      />
    )}
    
    <main>
      <slot />
    </main>
    
    {!bare && (
      <Footer client:load />
    )}
  </body>
</html>

<style lang="scss" is:global>
  @import '../assets/styles.scss';
</style>