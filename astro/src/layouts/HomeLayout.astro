---
/**
 * HomeLayout - Special layout for the homepage
 *
 * Features:
 * - Full-width hero section without sidebar
 * - Scroll-triggered masthead that appears after scrolling past hero
 * - Smooth transition for the navigation appearance
 */
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Galaxy Community Hub - Open source platform for data analysis' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | Galaxy Hub</title>

    <!-- Open Graph / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <!-- Scroll-triggered Masthead -->
    <header id="masthead" class="masthead">
      <div class="masthead-inner">
        <a href="/" class="masthead-logo">
          <img src="/images/galaxy_logo_hub_white.svg" alt="Galaxy" class="h-8" />
        </a>

        <nav class="masthead-nav">
          <a href="/news/">News</a>
          <a href="/events/">Events</a>

          <!-- Help dropdown -->
          <div class="nav-dropdown">
            <button class="nav-dropdown-trigger">
              Help
              <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="nav-dropdown-menu">
              <a href="/get-started/">Get Started</a>
              <a href="/learn/">Training</a>
              <a href="/support/">FAQ</a>
              <a href="https://help.galaxyproject.org/" target="_blank" rel="noopener">Help Forum ↗</a>
            </div>
          </div>

          <!-- Community dropdown -->
          <div class="nav-dropdown">
            <button class="nav-dropdown-trigger">
              Community
              <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="nav-dropdown-menu">
              <a href="/community/">The Galaxy Community</a>
              <a href="/community/sig/">Special Interest Groups</a>
              <a href="/community/wg/">Working Groups</a>
              <a href="/community/contributing/">How to Contribute</a>
              <a href="https://jxtxfoundation.org/" target="_blank" rel="noopener">@jxtx Foundation ↗</a>
            </div>
          </div>

          <!-- About dropdown -->
          <div class="nav-dropdown">
            <button class="nav-dropdown-trigger">
              About
              <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="nav-dropdown-menu">
              <a href="/use/">Galaxy Platforms</a>
              <a href="/careers/">Careers</a>
              <a href="/publication-library/">Publications</a>
              <a href="/citing-galaxy/">Citing Galaxy</a>
            </div>
          </div>

          <!-- Search -->
          <button class="search-toggle" id="search-toggle" aria-label="Search">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>

          <a href="https://usegalaxy.org" class="use-galaxy-btn" target="_blank">
            Use Galaxy
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </nav>

        <!-- Search overlay -->
        <div class="search-overlay hidden" id="search-overlay">
          <form action="/search/" method="get" class="search-form">
            <input type="search" name="q" placeholder="Search Galaxy Hub..." class="search-input" id="search-input" />
            <button type="button" class="search-close" id="search-close" aria-label="Close search">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </form>
        </div>

        <button id="mobile-menu-toggle" class="mobile-menu-toggle" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile menu dropdown -->
      <div id="mobile-menu" class="mobile-menu hidden">
        <a href="/news/">News</a>
        <a href="/events/">Events</a>
        <div class="mobile-section-label">Help</div>
        <a href="/get-started/">Get Started</a>
        <a href="/learn/">Training</a>
        <a href="/support/">FAQ</a>
        <a href="https://help.galaxyproject.org/" target="_blank">Help Forum ↗</a>
        <div class="mobile-section-label">Community</div>
        <a href="/community/">The Galaxy Community</a>
        <a href="/community/sig/">Special Interest Groups</a>
        <a href="/community/contributing/">How to Contribute</a>
        <a href="https://jxtxfoundation.org/" target="_blank">@jxtx Foundation ↗</a>
        <div class="mobile-section-label">About</div>
        <a href="/use/">Galaxy Platforms</a>
        <a href="/careers/">Careers</a>
        <a href="/publication-library/">Publications</a>
        <a href="https://usegalaxy.org" target="_blank" class="mobile-cta">Use Galaxy →</a>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: 'Atkinson Hyperlegible', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      /* Masthead - hidden by default, slides down on scroll */
      .masthead {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: linear-gradient(135deg, #2C3143 0%, #25537B 100%);
        transform: translateY(-100%);
        transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;
        box-shadow: none;
      }

      .masthead.visible {
        transform: translateY(0);
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
      }

      .masthead-inner {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0.75rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .masthead-logo img {
        height: 2rem;
        width: auto;
      }

      .masthead-nav {
        display: flex;
        align-items: center;
        gap: 2rem;
      }

      .masthead-nav a {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
        transition: color 0.2s;
      }

      .masthead-nav a:hover {
        color: #ffd700;
      }

      .use-galaxy-btn {
        display: inline-flex;
        align-items: center;
        background: #ffd700;
        color: #2C3143 !important;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 600;
      }

      .use-galaxy-btn:hover {
        background: #e6c200;
        color: #2C3143 !important;
      }

      /* Dropdown menus */
      .nav-dropdown {
        position: relative;
      }

      .nav-dropdown-trigger {
        display: inline-flex;
        align-items: center;
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        padding: 0.25rem 0;
        transition: color 0.2s;
      }

      .nav-dropdown-trigger:hover {
        color: #ffd700;
      }

      .nav-dropdown-menu {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        background: #2C3143;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.5rem 0;
        min-width: 200px;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s, visibility 0.2s;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        margin-top: 0.5rem;
        z-index: 100;
      }

      .nav-dropdown:hover .nav-dropdown-menu,
      .nav-dropdown:focus-within .nav-dropdown-menu {
        opacity: 1;
        visibility: visible;
      }

      .nav-dropdown-menu a {
        display: block;
        padding: 0.5rem 1rem;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 0.9rem;
        transition: background 0.15s, color 0.15s;
      }

      .nav-dropdown-menu a:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #ffd700;
      }

      /* Search toggle */
      .search-toggle {
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.9);
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 4px;
        transition: color 0.2s, background 0.2s;
      }

      .search-toggle:hover {
        color: #ffd700;
        background: rgba(255, 255, 255, 0.1);
      }

      /* Search overlay */
      .search-overlay {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #2C3143;
        padding: 1rem 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      }

      .search-overlay.hidden {
        display: none;
      }

      .search-form {
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .search-input {
        flex: 1;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 6px;
        padding: 0.75rem 1rem;
        color: white;
        font-size: 1rem;
      }

      .search-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
      }

      .search-input:focus {
        outline: none;
        border-color: #ffd700;
        box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.2);
      }

      .search-close {
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        cursor: pointer;
        padding: 0.5rem;
      }

      .search-close:hover {
        color: white;
      }

      .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        padding: 0.5rem;
      }

      .mobile-menu {
        background: #2C3143;
        padding: 1rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .mobile-menu a {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-size: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .mobile-menu a:last-child {
        border-bottom: none;
      }

      .mobile-section-label {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba(255, 255, 255, 0.5);
        padding: 1rem 0 0.25rem 0;
        margin-top: 0.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }

      .mobile-cta {
        background: #ffd700;
        color: #2C3143 !important;
        font-weight: 600;
        border-radius: 6px;
        margin-top: 1rem;
        text-align: center;
      }

      .hidden {
        display: none !important;
      }

      @media (max-width: 768px) {
        .masthead-nav {
          display: none;
        }

        .mobile-menu-toggle {
          display: block;
        }

        .mobile-menu:not(.hidden) {
          display: flex;
        }
      }

      /* Main content needs no top padding since hero is full-bleed */
      main {
        min-height: 100vh;
      }
    </style>

    <script>
      // Scroll-triggered masthead
      const masthead = document.getElementById('masthead');
      const heroHeight = window.innerHeight * 0.15; // Show after scrolling 15% of viewport

      function updateMasthead() {
        if (window.scrollY > heroHeight) {
          masthead?.classList.add('visible');
        } else {
          masthead?.classList.remove('visible');
        }
      }

      // Throttle scroll events for performance
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateMasthead();
            ticking = false;
          });
          ticking = true;
        }
      });

      // Mobile menu toggle
      const mobileToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileToggle?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Search toggle
      const searchToggle = document.getElementById('search-toggle');
      const searchOverlay = document.getElementById('search-overlay');
      const searchInput = document.getElementById('search-input');
      const searchClose = document.getElementById('search-close');

      searchToggle?.addEventListener('click', () => {
        searchOverlay?.classList.remove('hidden');
        searchInput?.focus();
      });

      searchClose?.addEventListener('click', () => {
        searchOverlay?.classList.add('hidden');
      });

      // Close search on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !searchOverlay?.classList.contains('hidden')) {
          searchOverlay?.classList.add('hidden');
        }
      });

      // Initial check
      updateMasthead();
    </script>
  </body>
</html>
