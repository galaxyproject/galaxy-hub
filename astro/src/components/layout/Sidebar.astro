---
// Sidebar navigation for Galaxy Hub
// Desktop: Fixed left sidebar with Vue-powered navigation
// Mobile: Hidden (use MobileMenu.vue for mobile)
import SidebarNav from './SidebarNav.vue';
---

<aside class="hidden lg:flex flex-col w-64 bg-galaxy-dark text-white sticky top-0 h-screen overflow-y-auto">
  <!-- Logo Section -->
  <div class="p-4 pr-6 border-b border-medium-bg flex justify-center">
    <a href="/" class="block">
      <img src="/images/galaxy_logo_hub_white.svg" alt="Galaxy Community Hub" class="h-10 w-auto" />
    </a>
  </div>

  <!-- Search -->
  <div class="p-4 border-b border-medium-bg">
    <form action="/search" method="get">
      <div class="relative">
        <input
          type="search"
          name="q"
          placeholder="Search..."
          class="w-full bg-medium-bg text-white placeholder-gray-400 rounded-md py-2 px-3 pr-10 text-sm focus:outline-none focus:ring-2 focus:ring-galaxy-gold"
        />
        <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-galaxy-gold">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
      </div>
    </form>
  </div>

  <!-- Navigation (Vue component for collapsible sections) -->
  <div class="flex-1 p-4 overflow-y-auto">
    <SidebarNav client:load />
  </div>

  <!-- Social links -->
  <div class="p-4 border-t border-medium-bg">
    <div class="flex justify-center gap-4">
      <a
        href="https://github.com/galaxyproject"
        class="text-gray-400 hover:text-galaxy-gold transition-colors"
        aria-label="GitHub"
        target="_blank"
        rel="noopener"
