---
import Layout from '../../layouts/BaseLayout.astro';
import Carousel from '../../components/CarouselDefault.vue';
import CarouselCustom from '../../components/Carousel.vue';

// Define slides data for the custom carousels
const customSlides = [
  {
    image: '/images/logos/GalaxyNewLogo_GalaxyProject_Trans.png',
    alt: 'Galaxy Logo',
    caption: 'Welcome to Galaxy',
    text: 'A platform for accessible, reproducible, and transparent computational biology'
  },
  {
    image: '/images/galaxy-logos/galaxy_project_logo_square.png',
    alt: 'Galaxy Project',
    caption: 'Galaxy Project',
    text: 'Data intensive biology for everyone',
    link: 'https://galaxyproject.org'
  },
  {
    image: '/images/logos/ElixirNoTextLogo.png',
    alt: 'ELIXIR',
    caption: 'Supported by ELIXIR',
    text: 'European life sciences infrastructure'
  }
];

const simpleSlides = [
  {
    image: '/images/logos/deNBILogo.png',
    alt: 'de.NBI'
  },
  {
    image: '/images/logos/ElixirNoTextLogo.png',
    alt: 'ELIXIR'
  }
];
---

<Layout title="Carousel Component Test">
  <div class="container my-5">
    <h1>Carousel Component Test</h1>
    
    <h2>Default Carousel (Backward Compatible)</h2>
    <p>This carousel uses the same content as the original Gridsome carousel.</p>
    <Carousel client:load />
    
    <h2>Custom Carousel with Different Slides</h2>
    <p>This demonstrates the flexible carousel component with custom slides.</p>
    <CarouselCustom 
      client:load 
      :slides={customSlides}
      :interval={3000}
      :indicators={true}
      :controls={true}
    />
    
    <h2>Carousel without Controls</h2>
    <CarouselCustom 
      client:load 
      :slides={simpleSlides}
      :interval={2000}
      :controls={false}
      :indicators={true}
    />
  </div>
</Layout>