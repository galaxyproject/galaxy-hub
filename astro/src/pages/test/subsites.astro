---
import Layout from '../../layouts/BaseLayout.astro';
import { subsites } from '../../config/subsites.js';
---

<Layout title="Subsites Test">
  <div class="container my-5">
    <h1>Regional Subsites Test</h1>
    
    <p>This page tests the regional subsite functionality.</p>
    
    <h2>Available Subsites</h2>
    <div class="row">
      {Object.entries(subsites.all).map(([key, config]) => (
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{config.name}</h5>
              <p class="card-text">
                Key: <code>{key}</code><br />
                Path: <code>{config.path || '/'}</code>
              </p>
              
              {config.external ? (
                <div class="alert alert-info mb-0">
                  External site: <a href={config.external} target="_blank">{config.external}</a>
                </div>
              ) : key !== subsites.default ? (
                <div>
                  <a href={`/${key}/`} class="btn btn-primary btn-sm">Visit Homepage</a>
                  <a href={`/${key}/news`} class="btn btn-secondary btn-sm ms-2">News</a>
                  <a href={`/${key}/events`} class="btn btn-secondary btn-sm ms-2">Events</a>
                </div>
              ) : (
                <div>
                  <a href="/" class="btn btn-primary btn-sm">Visit Homepage</a>
                  <a href="/news" class="btn btn-secondary btn-sm ms-2">News</a>
                  <a href="/events" class="btn btn-secondary btn-sm ms-2">Events</a>
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <h2>Navigation Subsites</h2>
    <p>These subsites appear in the navigation dropdown:</p>
    <ul>
      {subsites.navbar.map(key => (
        <li>
          <strong>{subsites.all[key].name}</strong> ({key})
          {subsites.all[key].external && ' - External'}
        </li>
      ))}
    </ul>
    
    <h2>Test Links</h2>
    <ul>
      <li><a href="/eu/">Galaxy Europe</a></li>
      <li><a href="/us/">Galaxy US</a></li>
      <li><a href="/freiburg/">Galaxy Freiburg</a></li>
      <li><a href="/au/">Galaxy Australia (external redirect)</a></li>
    </ul>
  </div>
</Layout>