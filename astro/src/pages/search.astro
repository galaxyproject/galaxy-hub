---
import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/Search.vue';
---

<BaseLayout title="Search">
  <div class="container my-5">
    <h1 class="text-center mb-4">Search Galaxy Hub</h1>
    <p class="text-center text-muted mb-5">
      Search through news, events, documentation, and more across the Galaxy ecosystem.
    </p>
    
    <Search client:load />
    
    <div class="search-tips mt-5">
      <h3>Search Tips</h3>
      <ul>
        <li>Use quotes for exact phrases: <code>"Galaxy workflow"</code></li>
        <li>Search by author: <code>author:smith</code></li>
        <li>Search by tag: <code>tag:tutorial</code></li>
        <li>Combine terms: <code>RNA-seq analysis</code></li>
      </ul>
    </div>
  </div>
</BaseLayout>

<style>
  .search-tips {
    background-color: #f8f9fa;
    padding: 1.5rem;
    border-radius: 0.25rem;
    margin-top: 3rem;
  }
  
  .search-tips h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }
  
  .search-tips ul {
    margin-bottom: 0;
  }
  
  .search-tips code {
    background-color: #e9ecef;
    padding: 0.125rem 0.25rem;
    border-radius: 0.125rem;
    font-size: 0.875rem;
  }
</style>