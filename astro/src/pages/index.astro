---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get recent articles for the homepage
const allArticles = await getCollection('articles');
const recentArticles = allArticles
  .filter(article => article.data.date)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 5);
---

<BaseLayout title="Welcome">
  <div class="hero bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h1 class="display-4">Welcome to Galaxy</h1>
          <p class="lead">
            Galaxy is an open-source platform for accessible, reproducible, 
            and transparent computational research.
          </p>
          <div class="mt-4">
            <a href="https://usegalaxy.org" class="btn btn-primary btn-lg mr-2">
              Use Galaxy
            </a>
            <a href="/community" class="btn btn-outline-primary btn-lg">
              Join the Community
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container my-5">
    <div class="row">
      <div class="col-lg-8">
        <h2>Recent News</h2>
        <div class="news-list">
          {recentArticles.map((article) => (
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title">
                  <a href={`/${article.data.slug}`}>
                    {article.data.title}
                  </a>
                </h5>
                {article.data.tease && (
                  <p class="card-text">{article.data.tease}</p>
                )}
                <p class="card-text">
                  <small class="text-muted">
                    {new Date(article.data.date).toLocaleDateString()}
                  </small>
                </p>
              </div>
            </div>
          ))}
        </div>
        <a href="/news" class="btn btn-outline-primary">View all news</a>
      </div>
      
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Quick Links</h5>
            <ul class="list-unstyled">
              <li><a href="https://training.galaxyproject.org">Galaxy Training Network</a></li>
              <li><a href="/events">Upcoming Events</a></li>
              <li><a href="/use">Public Galaxy Servers</a></li>
              <li><a href="/support">Get Help</a></li>
            </ul>
          </div>
        </div>
        
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Get Involved</h5>
            <p class="card-text">
              Galaxy is a community-driven project. There are many ways to get involved!
            </p>
            <a href="/community" class="btn btn-sm btn-primary">Learn More</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }
  
  .news-list .card {
    transition: box-shadow 0.3s;
  }
  
  .news-list .card:hover {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .card-title a {
    color: inherit;
    text-decoration: none;
  }
  
  .card-title a:hover {
    color: #007bff;
  }
</style>