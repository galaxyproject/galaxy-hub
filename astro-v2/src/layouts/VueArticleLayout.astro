---
/**
 * VueArticleLayout
 * Layout for articles that contain Vue component slots (inserts)
 * Handles <slot name="/path/to/insert" /> syntax
 */
import BaseLayout from './BaseLayout.astro';
import InsertSlot from '../components/InsertSlot.astro';
import { getInsert } from '../utils/content';
import { render } from 'astro:content';

interface Props {
  title: string;
  description?: string;
  date?: Date | string;
  authors?: string[];
  tags?: string[];
  image?: string;
  rawBody?: string;
}

const {
  title,
  description,
  date,
  authors = [],
  tags = [],
  image,
  rawBody = '',
} = Astro.props;

// Helper to ensure date is a Date object
function toDate(d: Date | string | undefined): Date | null {
  if (!d) return null;
  return d instanceof Date ? d : new Date(d);
}

// Format date for display
function formatDate(d: Date | string | undefined): string {
  const date = toDate(d);
  if (!date) return '';
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function toISOString(d: Date | string | undefined): string {
  const date = toDate(d);
  return date ? date.toISOString() : '';
}

// Extract slot names from content
function extractSlotNames(content: string): string[] {
  const slotRegex = /<slot\s+name=["']([^"']+)["']\s*\/?>/gi;
  const slots: string[] = [];
  let match;
  while ((match = slotRegex.exec(content)) !== null) {
    slots.push(match[1]);
  }
  return slots;
}

// Get all slot names from the raw body
const slotNames = extractSlotNames(rawBody);

// Pre-load all inserts
const insertMap = new Map<string, any>();
for (const name of slotNames) {
  const insert = await getInsert(name);
  if (insert) {
    const { Content } = await render(insert);
    insertMap.set(name, Content);
  }
}
---

<BaseLayout title={title} description={description}>
  <article class="max-w-4xl mx-auto">
    <!-- Article Header -->
    <header class="mb-8 pb-8 border-b border-gray-200">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">{title}</h1>

      {description && (
        <p class="text-xl text-gray-600 mb-4">{description}</p>
      )}

      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
        {date && (
          <time datetime={toISOString(date)}>
            {formatDate(date)}
          </time>
        )}

        {authors.length > 0 && (
          <div class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{authors.join(', ')}</span>
          </div>
        )}
      </div>

      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map((tag) => (
            <a
              href={`/tags/${tag.toLowerCase()}/`}
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-galaxy-primary/10 text-galaxy-primary hover:bg-galaxy-primary/20 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    {image && (
      <figure class="mb-8 -mx-4 sm:mx-0">
        <img
          src={image}
          alt={title}
          class="w-full rounded-lg shadow-lg"
        />
      </figure>
    )}

    <!-- Article Content with Insert Slots -->
    <div class="prose prose-lg prose-galaxy max-w-none vue-article-content">
      <!-- Render inserts that appear before main content -->
      {slotNames.map((name) => {
        const InsertContent = insertMap.get(name);
        return InsertContent ? (
          <div class="insert mb-6" data-slot-name={name}>
            <InsertContent />
          </div>
        ) : null;
      })}

      <!-- Main content slot -->
      <slot />
    </div>

    <!-- Article Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      {tags.length > 0 && (
        <div class="mb-6">
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`/tags/${tag.toLowerCase()}/`}
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}

      <div class="flex justify-between items-center">
        <a href="javascript:history.back()" class="text-galaxy-primary hover:underline flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  /* Custom prose styles for Galaxy branding */
  .prose-galaxy {
    --tw-prose-links: #25537B;
    --tw-prose-headings: #1f2937;
  }

  .prose-galaxy :where(a):not(:where([class~="not-prose"] *)) {
    color: var(--tw-prose-links);
    text-decoration: none;
  }

  .prose-galaxy :where(a):not(:where([class~="not-prose"] *)):hover {
    text-decoration: underline;
  }

  .prose-galaxy :where(code):not(:where([class~="not-prose"] *)) {
    background-color: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose-galaxy :where(pre):not(:where([class~="not-prose"] *)) {
    background-color: #1f2937;
    border-radius: 0.5rem;
  }

  /* Linkbox styling for inserts */
  .vue-article-content :global(.linkbox) {
    float: right;
    width: 200px;
    margin: 0 0 1rem 1.5rem;
    padding: 1rem;
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    font-size: 0.875rem;
  }

  .vue-article-content :global(.linkbox) :where(a) {
    display: block;
    color: #25537B;
    text-decoration: none;
    padding: 0.25rem 0;
  }

  .vue-article-content :global(.linkbox) :where(a):hover {
    text-decoration: underline;
  }

  .vue-article-content :global(.linkbox hr) {
    margin: 0.5rem 0;
    border-color: #e2e8f0;
  }

  /* Responsive linkbox */
  @media (max-width: 768px) {
    .vue-article-content :global(.linkbox) {
      float: none;
      width: 100%;
      margin: 0 0 1.5rem 0;
    }
  }
</style>
